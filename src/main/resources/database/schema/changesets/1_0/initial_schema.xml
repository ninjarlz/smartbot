<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet author="Michal Kusmidrowicz" id="chat-tables">
        <!--chat table-->
        <createTable tableName="chat">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="llm_type" type="${STRING_SMALL}">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_message_timestamp" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_message_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!--user table-->
        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_type" type="${STRING_SMALL}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!--chat user table-->
        <createTable tableName="chat_user">
            <column name="chat_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_chat" references="chat(id)"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user" references="user(id)"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="chat_user" columnNames="chat_id, user_id" constraintName="pk_chat_user"/>
        <!--configuration prompt table-->
        <createTable tableName="configuration_prompt">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="prompt" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_chat_configuration_prompt" references="chat(id)"/>
            </column>
        </createTable>
        <!--dynamic url table-->
        <createTable tableName="dynamic_url">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="${STRING_HUGE}">
                <constraints nullable="false"/>
            </column>
            <column name="vault_credentials_key" type="${STRING_BIG}"/>
            <column name="chat_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_chat_dynamic_url" references="chat(id)"/>
            </column>
        </createTable>
        <!--rag url table-->
        <createTable tableName="rag_url">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="${STRING_HUGE}">
                <constraints nullable="false"/>
            </column>
            <column name="vault_credentials_key" type="${STRING_BIG}"/>
            <column name="chat_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_chat_rag_url" references="chat(id)"/>
            </column>
        </createTable>
        <!--message table-->
        <createTable tableName="message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="${STRING_HUGE}">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="author_type" type="${STRING_SMALL}">
                <constraints nullable="false"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_chat_message" references="chat(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>